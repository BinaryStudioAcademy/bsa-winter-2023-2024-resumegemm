{
    "extends": "../tsconfig.json",
    "include": ["src", "knexfile.ts"],
    "files": ["src/global.d.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        },
        "outDir": "build",
        "skipLibCheck": true
    }
}
