{
    "name": "backend",
    "private": true,
    "type": "module",
    "engines": {
        "node": "18.x.x",
        "npm": "10.x.x"
    },
    "scripts": {
        "lint:type": "npx tsc --noEmit",
        "lint:js": "npx eslint --fix \"src/**/*.ts\"",
        "lint": "npm run lint:type && npm run lint:js",
        "start:dev": "nodemon --exec node --trace-warnings --loader ts-paths-esm-loader src/index.ts",
        "migrate:dev": "node --loader ts-paths-esm-loader ../node_modules/knex/bin/cli.js migrate:latest",
        "seed:run": "node --loader ts-paths-esm-loader ../node_modules/knex/bin/cli.js seed:run",
        "migrate:dev:make": "node --loader ts-paths-esm-loader ../node_modules/knex/bin/cli.js migrate:make -x ts",
        "migrate:dev:down": "node --loader ts-paths-esm-loader ../node_modules/knex/bin/cli.js migrate:down",
        "migrate:dev:rollback": "node --loader ts-paths-esm-loader ../node_modules/knex/bin/cli.js migrate:rollback --all",
        "build": "tsc && tsc-alias"
    },
    "devDependencies": {
        "@fastify/cors": "9.0.1",
        "@types/bcrypt": "5.0.2",
        "@types/convict": "6.1.1",
        "@types/jsonwebtoken": "9.0.5",
        "@types/nodemailer": "6.4.14",
        "@types/pug": "2.0.10",
        "@types/swagger-jsdoc": "6.0.1",
        "nodemon": "2.0.21",
        "ts-node": "10.9.1",
        "ts-paths-esm-loader": "1.4.1",
        "tsconfig-paths": "3.12.0"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "3.525.0",
        "@aws-sdk/s3-request-presigner": "3.525.0",
        "@fastify/multipart": "8.1.0",
        "@fastify/cookie": "9.3.1",
        "@fastify/oauth2": "7.8.0",
        "@fastify/swagger": "8.3.1",
        "@fastify/express": "2.3.0",
        "express-rate-limit": "7.2.0",
        "@fastify/swagger-ui": "1.4.0",
        "@types/node-cron": "3.0.11",
        "axios": "1.6.7",
        "bcrypt": "5.1.1",
        "convict": "6.2.4",
        "dotenv": "16.0.3",
        "fastify": "4.11.0",
        "fastify-plugin": "4.5.1",
        "guid-typescript": "1.0.9",
        "jsonwebtoken": "9.0.2",
        "knex": "2.4.2",
        "node-cron": "3.0.3",
        "nodemailer": "6.9.9",
        "objection": "3.0.1",
        "openai": "4.28.0",
        "pg": "8.9.0",
        "pino": "8.8.0",
        "pino-pretty": "9.1.1",
        "puppeteer": "22.1.0",
        "pug": "3.0.2",
        "stripe": "14.17.0",
        "swagger-jsdoc": "6.2.8"
    }
}
