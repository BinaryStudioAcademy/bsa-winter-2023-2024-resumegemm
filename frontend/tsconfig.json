{
    "extends": "../tsconfig.json",
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "types": ["node"],
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        }
    }
}
